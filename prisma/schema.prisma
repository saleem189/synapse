// ================================
// Prisma Schema for Chat Application (PostgreSQL)
// ================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// Enums
// ================================
enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ONLINE
  OFFLINE
  AWAY
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  FILE
  AUDIO
}

// ================================
// User Model
// ================================
model User {
  id        String     @id @default(cuid())
  name      String     @db.VarChar(50)
  email     String     @unique @db.VarChar(255)
  password  String
  avatar    String?
  role      UserRole   @default(USER)
  status    UserStatus @default(OFFLINE)
  lastSeen  DateTime   @default(now())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  messages          Message[]
  rooms             RoomParticipant[]
  ownedRooms        ChatRoom[]         @relation("RoomOwner")
  reactions         MessageReaction[]
  readMessages      MessageRead[]
  pushSubscriptions PushSubscription[]

  @@index([email]) // Already unique, but explicit index for search queries
  @@index([status]) // For filtering by online/offline status
  @@index([status, lastSeen]) // Composite index for filtering by status and sorting by lastSeen
  @@map("users")
}

// ================================
// ChatRoom Model
// ================================
model ChatRoom {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(50)
  description String?  @db.VarChar(200)
  isGroup     Boolean  @default(false)
  avatar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ownerId String
  owner   User   @relation("RoomOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  messages     Message[]
  participants RoomParticipant[]

  @@index([ownerId]) // For faster owner queries
  @@index([updatedAt]) // For room list sorting by activity
  @@map("chat_rooms")
}

// ================================
// RoomParticipant Model
// ================================
model RoomParticipant {
  id       String   @id @default(cuid())
  joinedAt DateTime @default(now())
  role     String   @default("member")

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roomId String
  room   ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, roomId])
  @@index([userId]) // For faster user room lookups
  @@index([roomId]) // For faster room participant queries
  @@map("room_participants")
}

// ================================
// Message Model
// ================================
model Message {
  id       String      @id @default(cuid())
  content  String      @db.VarChar(2000) // Max length enforced by DB
  type     MessageType @default(TEXT)
  fileUrl  String? // URL or path to uploaded file
  fileName String? // Original file name
  fileSize Int? // File size in bytes
  fileType String? // MIME type (e.g., "image/png", "application/pdf")

  senderId String
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  roomId String
  room   ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  isEdited  Boolean @default(false)
  isDeleted Boolean @default(false)

  replyToId String? // ID of message being replied to
  replyTo   Message?  @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies   Message[] @relation("MessageReplies")

  reactions    MessageReaction[]
  readReceipts MessageRead[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roomId, createdAt])
  @@index([roomId, isDeleted, createdAt]) // Composite index for common query pattern
  @@index([senderId])
  @@index([replyToId])
  // Note: Full-text search index (GIN) must be created via SQL migration
  // See: prisma/migrations/add_fulltext_search_index.sql
  @@map("messages")
}

// ================================
// Message Reaction Model
// ================================
model MessageReaction {
  id        String   @id @default(cuid())
  emoji     String // Emoji character (üëç, ‚ù§Ô∏è, üòÇ, etc.)
  createdAt DateTime @default(now())

  messageId String
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@index([messageId])
  @@map("message_reactions")
}

// ================================
// Message Read Receipt Model
// ================================
model MessageRead {
  id     String   @id @default(cuid())
  readAt DateTime @default(now())

  messageId String
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([messageId])
  @@index([userId])
  @@map("message_reads")
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

// ================================
// Config Model (for runtime configuration)
// ================================
model Config {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("configs")
}
