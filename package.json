{
  "name": "chat-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "server": "node backend/server.js",
    "worker": "tsx backend/worker.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\" \"npm run worker\"",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:fresh": "prisma migrate reset",
    "db:migrate:fresh-seed": "prisma migrate reset --force && npx tsx prisma/seed.ts",
    "db:status": "prisma migrate status",
    "db:fix-roles": "node scripts/fix-roles.js",
    "db:check-roles": "node scripts/check-roles.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm run docker:up && ping -n 6 127.0.0.1 >nul && npm run db:generate && npm run db:push",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@socket.io/redis-adapter": "^8.3.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/dompurify": "^3.0.5",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.65.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^3.6.0",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.2.1",
    "framer-motion": "^12.23.24",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.412.0",
    "next": "14.2.5",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.0",
    "rate-limiter-flexible": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.0",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.12",
